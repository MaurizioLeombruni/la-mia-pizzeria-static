@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pizzeria IGUESSKEKW</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar bg-light py-3">
        <div class="container-fluid justify-content-center">
            <h3 class="fw-bold">Pizzeria "Pizzeria"</h3>
        </div>
    </nav>

    <div class="container">
        <h1 class="my-3 text-danger text-center">"This is truly one of the pizzerias of all time"</h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nome</th>
                    <th scope="col">Descrizione</th>
                    <th scope="col">Foto</th>
                    <th scope="col">Prezzo</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Pizza di pizza</td>
                    <td>Una deliziosa pizza al gusto di pizza</td>
                    <td><img src="https://picsum.photos/200/?random=1" class="img-fluid img-thumbnail" alt="itsapizzadotjpeg"></td>
                    <td>4,50€</td>
                </tr>
                <tr>
                    <td>Pizza atirehgram</td>
                    <td>Hai mai mangiato una pizza margherita al contrario? Ora puoi!</td>
                    <td><img src="https://picsum.photos/200/?random=2" class="img-fluid img-thumbnail" alt="reversedpizza"></td>
                    <td>0,54€</td>
                </tr>
                <tr>
                    <td>Pizza COSTOSAH</td>
                    <td>Un'ottima pizza in caso tu voglia regalarci dei soldi!</td>
                    <td><img src="https://picsum.photos/200/?random=3" class="img-fluid img-thumbnail" alt="givememoneih"></td>
                    <td>14,50€</td>
                </tr>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>

</html>